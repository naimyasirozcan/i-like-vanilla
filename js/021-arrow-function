function hello(name){
    console.log(`hosgelmissen ${name} gardasim.`)
}

hello('javascript')

const helloFuncv1 = (firstName) => { console.log(`hosgelmissen vay dassakli gardasim benim ${firstName}`)}

helloFuncv1('helloFunctionV1')

const helloFuncV2 = firstName => console.log(`merhaba yavrum ${firstName} ne hos bir isimmm`)

helloFuncV2('hellofuncv2')

const helloFunctionV3 = (firstName, lastName) => console.log(`merhaba yavrum ${firstName} ne hos bir isim ve ${lastName} ne guzel soyismi`)

helloFunctionV3('hellofunctionv3','ozcanogullarigiller')

const helloFunctionV4 = (firstName,lastName) => {
    let info = `bu 4. deneme, hosgeldin adi ${firstName} soyadi ${lastName} olan BABAYIGIT`
console.log(info)
return info
}

helloFunctionV4('yasir','ozcan')